<div class="header">
  <% if user_signed_in? %>
    <%= link_to image_tag(current_user.gravatar, class: "img-circle", size: '40x40'), current_user, class: 'pull-right' %>
  <% end %>
  <ul class="nav nav-pills pull-right">
    <% if user_signed_in? %>
      <li><%= header_link_to 'groups', 'show', '活动', current_user.groups.first %></li>
      <li><%= header_link_to 'groups', 'members', '球友', members_group_path(current_user.groups.first) %></li>
      <%# header_link_to 'users', 'show', current_user.name, current_user %>
      <li> <%= link_to t('devise.logout'), destroy_user_session_path, method: :delete %> </li>
      <%# link_to t('devise.logoff'), registration_path(current_user), :method => :delete, data: { confirm: t('layouts.confirm') } %>
    <% else %>
      <li><%= header_link_to 'sessions', 'new', t('devise.login'), new_user_session_path %></li>
      <li><%= header_link_to 'registrations', 'new', t('devise.signup'), new_user_registration_path %></li>
    <% end %>
  </ul>

  <h3 class="text-muted"><strong><%= link_to t('layouts.brand'), root_path %></strong></h3>
</div>
