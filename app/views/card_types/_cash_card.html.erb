<div class="col-md-4 col-xs-4">
  <div class="panel panel-info">
    <div class="panel-heading">
      <strong><%= card_type.name %></strong>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-md-8">
          <p>名称：<%= card_type.name %></p>
          <p>类型：<%= t("card_types.type.#{card_type.kind}") %></p>
        </div>
        <div class="col-md-4">
          <% if can? :edit, [@group, card_type] %>
            <p><%= link_to 'Edit', edit_group_card_type_path(@group, card_type) %></p>
          <% end %>
          <% if can? :destroy, [@group, card_type] %>
            <p><%= link_to 'Destroy', [@group, card_type], method: :delete, data: { confirm: 'Are you sure?' } %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
