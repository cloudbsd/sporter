<%= render 'shared/cardtabs' %>
<br>

<div class="row">
  <div class="col-md-4">
    <%= link_to t('fees.new'), new_group_fee_path(@group), class: 'btn btn-warning' %>

    <h4>费用项类型管理</h4>
    （仅针对AA制收费类型使用）
    <br>
    <br>
    <table class="table table-bordered">
      <thead>
        <tr class="active">
          <th>名称</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% @group.fees.each do |fee| %>
          <tr>
            <td><%= fee.name %></td>
            <td>
              <%= link_to 'Edit', edit_group_fee_path(@group, fee) %> /
              <%= link_to 'Destroy', [@group, fee], method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="col-md-4">
    <%= render file: 'fees/new' %>
  </div>
</div>
