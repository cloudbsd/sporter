<%= form_for [@group, activity] do |f| %>
  <div class="form-group">
    <%= f.label :title, class: 'control-label' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :started_at %><br>
    <%# f.datetime_select :started_at, default: { hour: 19, minute: 30 } %>
    <%= f.text_field :started_at, class: 'datepicker started-date', value: default_date(activity.started_at) %>
    <%= f.time_select :started_at, default: { hour: 19, minute: 30 } %>
  </div>
  <div class="form-group">
    <%= f.label :stopped_at %><br>
    <%# f.datetime_select :stopped_at, default: { hour: 21, minute: 30 } %>
    <%= f.text_field :stopped_at, class: 'datepicker stopped-date', value: default_date(activity.stopped_at) %>
    <%= f.time_select :stopped_at, default: { hour: 21, minute: 30 } %>
  </div>
  <div class="form-group">
    <%= f.label :pay_type, class: 'control-label' %>
    <%= f.select :pay_type, Group::PAYMENT_TYPES.map { |item| [t("groups.pay_type.#{item[0]}"), item[1]] }, { include_blank: false }, { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
