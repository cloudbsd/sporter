<div class="row">
  <div class="col-xs-12 col-md-6">

    <%= link_to 'Edit', edit_group_activity_path(@group, @activity) %> |
    <%= link_to 'Back', @group %>

    <br>
    <br>

    <div>
      <h4>活动时间</h4>
      <%= localize_date @activity.started_at %>, <%= localize_time @activity.started_at %> - <%= localize_time @activity.stopped_at %>
    </div>

    <br>

    <%= render 'pay_fees' %>
    <%= render 'pay_members' %>

  </div>

  <div class="col-xs-6 col-md-4 col-md-offset-2">
    <%= link_to t('fee_items.new'), new_group_activity_fee_item_path(@group, @activity) %> <br>
    <%= link_to t('participants.new'), new_group_activity_participant_path(@group, @activity) %>
    <%= render file: 'fees/new' %>
  </div>
</div>
