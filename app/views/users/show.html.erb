<div class="row">
  <div class="col-xs-12 col-md-8">
    <%# render 'balances' %>
    <h4>一周内活动 (已加入的群)</h4>

<table class="table table-bordered">
  <thead>
    <tr class="active">
      <th>群名称</th>
      <th>活动时间</th>
      <th>报名人数</th>
      <th>操作</th>
    </tr>
  </thead>

  <tbody>
    <% current_user.activities.inoneweek.each do |activity| %>
      <tr>
        <td><%= link_to activity.group.name, activity.group %></td>
        <td><%= activity_link_to activity %></td>
        <td><%= activity.participants.size %></td>
        <td>
          <%= link_to 'Edit', edit_group_activity_path(activity.group, activity) %> /
          <%= link_to 'Destroy', [activity.group, activity], method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

    <h4>我的会员卡</h4>
    <h4><%= link_to '我的存款记录', transactions_user_path(current_user) %></h4>
    <%= render 'shared/transactions', transactions: @user.transactions %>


<h4>活动记录</h4>
<table class="table table-bordered">
  <thead>
    <tr class="active">
      <th>活动日期</th>
      <th>个人可抵消费用（元）</th>
      <th>缴纳费用（元）</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @user.participants.each do |participant| %>
      <% activity = participant.activity %>
      <% group = activity.group %>
      <tr>
        <td><%= link_to (localize_date activity.started_at), [group, activity] %></td>
        <td><%= participant.derated_pay %></td>
        <td><%= participant.net_pay %></td>
        <td>
          <%= link_to '编辑', edit_group_activity_participant_path(group, activity, participant) %> / 
          <%= link_to '删除', [group, activity, participant], method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


  </div>
  <div class="col-xs-6 col-md-4">
    <%= render 'sidebar' %>
  </div>
</div>
