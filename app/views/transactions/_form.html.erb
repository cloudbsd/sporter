<%= form_for(@transaction) do |f| %>
  <%= form_error_messages!(f.object) %>

  <div class="form-group">
    <%= f.label :user_id %><br>
    <%= f.select :user_id, User.all.map { |r| [r.name, r.id] } %>
    <%# f.text_field :user_id %>
  </div>
  <div class="form-group">
    <%= f.label :action %><br>
    <%= f.select :action, Transaction::TRANSACTION_TYPES.map { |r| [t('transactions.action.'+r), r] } %>
    <%# f.text_field :action %>
  </div>
  <div class="form-group">
    <%= f.label :amount %><br>
    <%= f.number_field :amount %>
  </div>
  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
