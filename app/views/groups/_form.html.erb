<%= form_for(@group) do |f| %>
  <%= form_error_messages!(f.object) %>

  <div class="form-group">
    <%= f.label :uniqname, class: 'control-label' %>
    <%= f.text_field :uniqname, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :name, class: 'control-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :pay_type, class: 'control-label' %>
    <%= f.select :pay_type, Group::PAYMENT_TYPES.map { |item| [t("groups.pay_type.#{item[0]}"), item[1]] }, { include_blank: false }, { class: 'form-control' } %>
  </div>

  <div class='form-group'>
    <%= f.label :location, '所在省市', class: 'control-label' %> <br>
    <%= render partial: 'shared/chinacity_ajax', locals: { f: f, is_disabled: false } %>
    <%# render partial: 'shared/chinacity_db', locals: { f: f, is_disabled: false } %>
    <%# render partial: 'shared/chinacity_gem', locals: { business_owner: insurance_item.insurance_business, id_prefix: "#{owner_name}_insurance_business_attributes", name_prefix: "#{owner_name}[insurance_business_attributes]", is_disabled: false } %>
  </div>

  <div class='form-group'>
    <%= f.label :location, class: 'control-label' %>
    <%= f.text_field :location, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :aboutme, class: 'control-label' %>
    <%= f.text_area :aboutme, class: 'form-control', rows: 5 %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
