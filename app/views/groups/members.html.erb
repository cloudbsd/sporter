<div class="row">
  <div class="col-md-8">

<%= link_to '添加球友入群', new_user_path(group_id: @group.id), class: 'btn btn-warning' %>
<%# link_to 'Edit', edit_group_activity_path(@group, activity) %>
<br>

    <h4>群内球友</h4>
    <table class="table table-bordered">
      <thead>
        <tr class="active">
          <th>姓名</th>
          <th>账户余额</th>
          <th>活动次数</th>
        </tr>
      </thead>
      <tbody>
        <% @group.users.each do |user| %>
          <tr>
            <td><%= link_to user.name, user %></td>
            <td>
              <% user.cards.in_group(@group.id).each do |card| %>
                <%= card.remaining_number %> <br>
              <% end %>
            </td>
            <td><%= user.participants.size %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="col-md-4">
    <%= render 'sidebar' %>
  </div>
</div>
